<h1 class="text-center">Show</h1>
<h2 class="text-center"><%= @restaurant.name %></h2>
<ul class="card text-center">
 <li>Address: <%= @restaurant.address %></li>
  <li>Phone number: <%= @restaurant.phone_number %></li>
   <li>Category: <%= @restaurant.category %></li>
</ul>


<div class="text-center">
  <div class="row text-center">
    <div class="col-4">
      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
        <%= f.submit class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
<br>
<br>
<%= button_to "Back Home", restaurants_path, :id => "open-contacts-dialog-btn",
      :class => "btn btn-outline-secondary", :method => :get %>
<br>
<br>
<p><%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</p>
